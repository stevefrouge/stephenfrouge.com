  body
    section(class='section banner' data-slide='1')
      .wrap-circle
        .circle-1
          .circle-2
            .logo
              h2
                |stephen
                span frouge.com
              .roles
                div Software Developer
                div Systems Architect
                div Business Analyst
      .wrap-overlay
      div(id='slides')
        .slides-container
          img(src='/images/starwars.jpg')
          img(src='/images/coffee.jpg')                                          
          img(src='/images/space.jpg')
          img(src='/images/code.jpg')
    .navbar.navbar-default.main-menu
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='index.html', data-slide='1')
            .logo
              h2
                | stephen
                span frouge
              div software professional
        .navbar-collapse.collapse
          ul(class='nav navbar-nav navbar-right')
            li
              a(href='#') Home
            li
              a(onclick='scrollTo("sectionSkills");' class="hand") Skills
            li
              a(onclick='scrollTo("sectionExp");' class="hand") Experience
            li
              a(onclick='scrollTo("sectionPortfolio");' class="hand") Portfolio
    block content
    section(class='section connect')
        .container
            .row
                .col-xs-12.col-sm-12.col-md-12.col-lg-12.wow.fadeInDown
                    h2(class='hidden') Connect
                    a(title='' href="#")
                        .item(style='background: #3a5795;')
                            i(class='fa fa-facebook')
                    a(title='' href="#")
                        .item(style='background: #1da1f2;')
                            i(class='fa fa-twitter')
                    a(title='' href="#")
                        .item(style='background: red')
                            i(class='fa fa-google')
                    a(title='' href="#")
                        .item(style='background: #0077b5;')
                            i(class='fa fa-linkedin')
            .row
                 
                    a(href='#login' id='aLogin') Login
                    .divLogin
                        form.well(action="/login", method="post")
                            .form-group
                                label(for='email') Email Address
                                input(name='email' type='email' class='form-control' id='email' placehodler='Email')
                            .form-group
                                label(for='empasswordail') Password 
                                input(name='password' type='password' class='form-control' id='password')
                            button(type='submit' class='btn btn-default') Login                                            
    .modal(tabindex='-1' id='modal1' role='dialog' aria-hidden='true' aria-labelledby='myModalLabel1')
        .modal-dialog(style='min-width: 40%')
            .modal-content
                .modal-header
                    button(class='close' aria-label='Close' type='button' data-dismiss='modal')
                        span(aria-hidden='true') x
                    h4(id='modaltitle' class='modal-title') Project Title
                .modal-body
                    img(id='modalimg' class='img-responsive' src='/images/epb.png' style='display:block;margin:auto;')
                        
    script(src='/javascripts/jquery.min.js' type='text/javascript')
